@model toDo.Models.Tarefa

@{
    ViewData["Title"] = "Apagar Registro";
}

<h1>Apagar Cadastro</h1>
<h3>Você tem certeza que deseja apagar este cadastro ?</h3>

<div>
    <h4>Cadastro</h4>
    <hr/>
    <dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
    @Html.DisplayFor(model => model.Name)
    </dd>
    
    <dt class="col-sm-2">
        @Html.DisplayFor(model => model.EndDate)
    </dt>
    <dd class="col-sm-10">
        @Html.TextBoxFor(model => model.EndDate, "{0:d MMM yyyy}", new{@disabled=true})
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Status)
    </dd>

    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Apagar" class="btn btn-danger btn-sm"/>
        <a class="btn btn-secondary text-white btn-sm" asp-action="Index"> Voltar </a>
    </form>
</div>